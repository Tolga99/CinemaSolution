@using CinemaWebSite.Models
@using System.Globalization

@model CinemaWebSite.Models.ActorModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Actor Page</title>
</head>
<body>
    <li><a href="/">Back to the Home</a></li>

    <div class="col -sm -6 col -md -4 col -lg -3">
        <li class="card">
            <ul class="list -group  list -group -flush">
                <h2>
                    <img src=@Model.Profile_path />
                    <li class="list -group -item">@Model.Name</li>
                </h2>
                <li class="list -group -item">@Model.Biography</li>
                <li class="list -group -item">
                    @Model.Birthday.ToString("MM/dd/yyyy", CultureInfo.InvariantCulture)) (@Model.Age years old)
                </li>
            </ul>
        </li>
    </div>
</body>
</html>
